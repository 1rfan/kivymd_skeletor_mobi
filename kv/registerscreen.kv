<RegisterScreen>:
    #name: "scr_register"
    #md_bg_color: []
    MDCard:
        size_hint: 0.75,0.90
        border_radius: 20
        radius: [15]
        pos_hint: {"center_x":.5,"center_y":.5}
        elevation: 95
        #md_bg_color: [35/255,49/255,48/255,1]
        padding: 20
        spacing: 30
        orientation: "vertical"

        #object properties binding
        userlogin_input:txt_userlogin
        username_input:txt_username
        userpswd_input:txt_userpswd
        useremail_input:txt_useremail
        admpswd_input:txt_admpswd

        MDLabel:
            text:"REGISTER NEW USER"
            font_style: 'Button'
            font_size: 23
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        MDTextFieldRound:
            id:txt_userlogin
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x":.5}
            color_active:[1,1,1,1]
        #do this to enable tab keyboard button to cycle through text inputs...    
            write_tab: False
            multiline: False
            on_text_validate: root.foo()
        #
        MDTextFieldRound:
            id:txt_username
            hint_text: "Full Name"
            icon_right: "face"
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x":.5}
            color_active:[1,1,1,1]
        #do this to enable tab keyboard button to cycle through text inputs...    
            write_tab: False
            multiline: False
            on_text_validate: root.foo()
        #
        MDTextFieldRound:
            id:txt_useremail
            hint_text: "user email"
            icon_right: "email"
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x":.5}
            color_active:[1,1,1,1]
        #do this to enable tab keyboard button to cycle through text inputs...    
            write_tab: False
            multiline: False
            on_text_validate: root.foo()
        #
        MDTextFieldRound:
            id:txt_userpswd
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x":.5}
            password: True
            color_active:[1,1,1,1]
        #do this to enable tab keyboard button to cycle through text inputs...      
            write_tab: False
            multiline: False
            on_text_validate: root.foo()
        #
        MDTextFieldRound:
            id:txt_admpswd
            hint_text: "Admin password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x":.5}
            password: True
            color_active:[1,1,1,1]
        #do this to enable tab keyboard button to cycle through text inputs...      
            write_tab: False
            multiline: False
            on_text_validate: root.foo()
        #
        BoxLayout:
            orientation:"horizontal"
            AnchorLayout:        
                MDRoundFlatButton:
                    id: btn_login
                    text: 'REGISTER'
                    font_size: 15
                    #pos_hint: {"center_x":.5}
                    on_release: app.register_user(txt_userlogin.text, txt_username.text, txt_useremail.text, txt_userpswd.text, txt_admpswd.text)
            AnchorLayout:
                MDRoundFlatButton:
                    id: btn_cancel
                    text: 'CANCEL'
                    font_size: 15
                    #pos_hint: {"center_x":.5}
                    on_release: app.change_screen("scr_login", direction='left', mode='push')
        MDLabel:
            id: txt_info_register
            pos_hint: {"center_x":.5}
            size_hint_y: None
            height: 10
            halign: 'center'
            text:""
            text_color: [1,0,0,1]
            markup: True